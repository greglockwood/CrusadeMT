- form_for(search) do |f|
  = f.error_messages
  %p
    %label Based on existing search:
    = f.select :based_on, Search.all.collect { |s| [s.name, s.id] }
    = observe_field "search_based_on", :url => new_search_path, :with => 'based_on'
  %p
    \&nbsp;
  %p
    = f.label :first_name
    = f.text_field :first_name
  %p
    = f.label :nickname
    = f.text_field :nickname
  %p
    = f.label :last_name
    = f.text_field :last_name
  %p
    = f.label :gender
    = f.text_field :gender
  %p
    = f.label :suburb
    = f.text_field :suburb
  %p
    = f.label :christian
    = f.check_box :christian
  .clear
    \&nbsp;
  %p
    = f.label :became_christian
    = f.check_box :became_christian
  .clear
    \&nbsp;
  %p
    = f.label :min_age
    = f.text_field :min_age
  %p
    = f.label :max_age
    = f.text_field :max_age
  %p
    = f.label :has_children
    = f.check_box :has_children
  .clear
    \&nbsp;
  %p
    = f.label :oldest_child_age
    = f.text_field :oldest_child_age
  %p
    = f.label :church
    = f.select :church_id, Church.all(:order => "state_id ASC, suburb ASC").collect { |c| ["#{c.name} (#{c.suburb}, #{c.state.abbreviation})", c.id]}, :include_blank => "(N/A)"
  %p
    = f.submit "Submit"