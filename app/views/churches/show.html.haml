.sectionHeader
  %h2= @church.name
.details.single_column
  %p
    %label Address:
    %span.floatLeft= @church.full_address "<br />"
  .clear &nbsp;
  
  = divider
  
  %p
    %label= "#{pluralize(@church.people.count, "person")} #{@church.people.count == 1 ? "calls" : "call"} this their home church:"
    %ul.floatLeft
      - @church.people.each do |person|
        %li= link_to person.full_name, person_path(person)

